{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@shared": ["packages/shared/src"],
      "@shared/*": ["packages/shared/src/*"],
      "@application-a/*": ["packages/application-a/src/*"],
      "@application-b/*": ["packages/application-b/src/*"]
    }
  },
  "include": ["src", "../../node_modules"]
}
